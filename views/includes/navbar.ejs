  .btn-search {
    background-color: #fe424d;
    color: aliceblue;
    border-radius: 25px;
    padding:0 1 rem 0 1 rem;
  }

  .search-container {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-grow: 1;
  }

