<% layout("/layouts/boilerplate") %>

<h2>All Listings</h2>

<div class="row row-cols-lg-3 g-4">
  <% for(let listing of allListings) { %>
    <div class="card col">
      <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
        <div class="card h-100 shadow" style="width: 20rem">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 20rem">
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text">
              â‚¹ <%= listing.price.toLocaleString('en-IN') %>
            </p>
            <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary">View Listing</a>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>
